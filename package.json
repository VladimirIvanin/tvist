{
  "name": "tvist",
  "version": "0.0.1",
  "description": "Модульный и легковесный слайдер для современного веба",
  "type": "module",
  "main": "./dist/tvist.cjs.js",
  "module": "./dist/tvist.esm.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/tvist.esm.js",
      "require": "./dist/tvist.cjs.js"
    },
    "./dist/tvist.css": "./dist/tvist.css"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite --config vite.sandbox.config.ts",
    "dev:watch": "concurrently \"npm run dev\" \"npm run typecheck -- --watch\"",
    "build": "tsc && vite build",
    "build:watch": "tsc --watch",
    "docs:dev": "vitepress dev docs",
    "docs:build": "npm run docs:generate-meta && vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:generate-meta": "tsx scripts/generate-options-meta.ts",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,scss}\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "slider",
    "carousel",
    "swiper",
    "slideshow",
    "touch",
    "responsive",
    "lightweight",
    "typescript",
    "ecommerce",
    "gallery"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/VladimirIvanin/tvist.git"
  },
  "bugs": {
    "url": "https://github.com/VladimirIvanin/tvist/issues"
  },
  "homepage": "https://github.com/VladimirIvanin/tvist#readme",
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@types/node": "^24.7.2",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.1",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "happy-dom": "^20.0.0",
    "jsdom": "^27.0.0",
    "prettier": "^3.6.2",
    "sass": "^1.93.2",
    "terser": "^5.44.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1",
    "vite": "^7.1.10",
    "vitepress": "^1.6.4",
    "vitest": "^3.2.4",
    "vue": "^3.5.27"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "Safari >= 15"
  ]
}
